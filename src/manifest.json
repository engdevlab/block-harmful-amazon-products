{
    "manifest_version": 2,
    "name": "Block Harmful Amazon's Products",
    "description": "任意でamazonにある有害な商品をブロックする。",
    "version": "0.1",
    "icons": {
        "32": "icon_128.png",
        "48": "icon_128.png",
        "128": "icon_128.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*" ],
        "js": ["jquery-2.2.0.min.js", "ChEx.js", "content_script.js"]
        //"css": ["content_scripts.css"]
    }],
    "options_page": "options.html",
    //"background": {
    //    "scripts": [""]
    //},
    "browser_action": {
        "default_icon": "icon_128.png",
        "default_title": "",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ]
}
